---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllJournals } from '@/utils/content-parser';
import { withBase } from '@/utils/base-path';
import '@/styles/global.css';

const journals = getAllJournals();

const title = 'アーカイブ - GenAI週刊';
const description = 'GenAI週刊の過去のジャーナル一覧。メインジャーナル、アネックス、サマリーなど各週の記事をご覧いただけます。';

// Calculate total statistics
const totalStats = journals.reduce((acc, journal) => ({
  totalJournals: acc.totalJournals + 1,
  totalMainJournals: acc.totalMainJournals + (journal.mainJournal ? 1 : 0),
  totalAnnexJournals: acc.totalAnnexJournals + (journal.annexJournal ? 1 : 0),
  totalSummaries: acc.totalSummaries + journal.stats.totalSummaries,
}), {
  totalJournals: 0,
  totalMainJournals: 0,
  totalAnnexJournals: 0,
  totalSummaries: 0,
});

// Format journals by year for better organization
const journalsByYear = journals.reduce((acc, journal) => {
  const year = journal.date.substring(0, 4);
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(journal);
  return acc;
}, {} as Record<string, typeof journals>);

const years = Object.keys(journalsByYear).sort().reverse();
---

<BaseLayout title={title} description={description}>
  <div class="archive-page">
    <header class="archive-header">
      <nav class="breadcrumb">
        <a href={withBase('/')}>ホーム</a>
        <span class="separator">›</span>
        <span class="current">アーカイブ</span>
      </nav>

      <h1 class="page-title">GenAI週刊アーカイブ</h1>
      
      <div class="archive-stats">
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalJournals}</div>
            <div class="stat-label">総週数</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalMainJournals}</div>
            <div class="stat-label">メインジャーナル</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalAnnexJournals}</div>
            <div class="stat-label">アネックス</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalSummaries.toLocaleString()}</div>
            <div class="stat-label">総サマリー数</div>
          </div>
        </div>
      </div>
    </header>

    <main class="archive-content">
      {years.map(year => (
        <section class="year-section">
          <h2 class="year-heading">{year}年</h2>
          
          <div class="journals-grid">
            {journalsByYear[year].map(journal => {
              // Format date for display
              const displayDate = new Date(journal.date).toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                weekday: 'long'
              });
              
              
              return (
                <article class="journal-card">
                  <header class="card-header">
                    <div class="card-date">
                      <time datetime={journal.date}>{displayDate}</time>
                    </div>
                    <div class="journal-types">
                      {journal.mainJournal && (
                        <span class="journal-type type-main">メイン</span>
                      )}
                      {journal.annexJournal && (
                        <span class="journal-type type-annex">アネックス</span>
                      )}
                    </div>
                  </header>

                  <div class="card-content">
                    <div class="journal-info">
                      {journal.mainJournal && (
                        <div class="journal-item">
                          <h3 class="journal-title">
                            <a href={withBase(`/journals/${journal.date}/main/`)}>
                              {journal.mainJournal.title}
                            </a>
                          </h3>
                          <p class="journal-excerpt">{journal.mainJournal.excerpt}</p>
                          <div class="journal-meta">
                            <span class="reading-time">{journal.mainJournal.readingTime}分</span>
                            <span class="word-count">{journal.mainJournal.wordCount.toLocaleString()}文字</span>
                          </div>
                        </div>
                      )}
                      
                      {journal.annexJournal && (
                        <div class="journal-item">
                          <h3 class="journal-title">
                            <a href={withBase(`/journals/${journal.date}/annex/`)}>
                              {journal.annexJournal.title}
                            </a>
                          </h3>
                          <p class="journal-excerpt">{journal.annexJournal.excerpt}</p>
                          <div class="journal-meta">
                            <span class="reading-time">{journal.annexJournal.readingTime}分</span>
                            <span class="word-count">{journal.annexJournal.wordCount.toLocaleString()}文字</span>
                          </div>
                        </div>
                      )}
                    </div>

                    <div class="card-stats">
                      <div class="stats-row">
                        <div class="stat">
                          <span class="stat-number">{journal.stats.totalSummaries}</span>
                          <span class="stat-text">総サマリー</span>
                        </div>
                        <div class="stat">
                          <span class="stat-number">{journal.stats.mainSummaries}</span>
                          <span class="stat-text">メイン掲載</span>
                        </div>
                        <div class="stat">
                          <span class="stat-number">{journal.stats.annexSummaries}</span>
                          <span class="stat-text">アネックス掲載</span>
                        </div>
                        <div class="stat">
                          <span class="stat-number">{journal.stats.omittedSummaries}</span>
                          <span class="stat-text">未掲載</span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <footer class="card-actions">
                    <a href={withBase(`/journals/${journal.date}/`)} class="btn btn-primary">
                      週の概要
                    </a>
                    {journal.stats.totalSummaries > 0 && (
                      <a href={withBase(`/journals/${journal.date}/summaries/`)} class="btn btn-outline">
                        全サマリー ({journal.stats.totalSummaries})
                      </a>
                    )}
                  </footer>
                </article>
              );
            })}
          </div>
        </section>
      ))}
      
      {journals.length === 0 && (
        <div class="empty-state">
          <p>まだジャーナルが公開されていません。</p>
          <a href={withBase('/')} class="btn btn-primary">ホームに戻る</a>
        </div>
      )}
    </main>
  </div>
</BaseLayout>

<style>
  .archive-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .archive-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .breadcrumb {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: #2563eb;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 0.5rem;
    color: #9ca3af;
  }

  .current {
    color: #374151;
    font-weight: 500;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .archive-stats {
    background: #f8fafc;
    border-radius: 0.75rem;
    padding: 1.5rem;
    border: 1px solid #e2e8f0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 2rem;
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: #2563eb;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
    margin-top: 0.5rem;
    font-weight: 500;
  }

  .archive-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .year-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .year-heading {
    font-size: 1.875rem;
    font-weight: 600;
    color: #1f2937;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .journals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 2rem;
  }

  .journal-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    transition: all 0.2s ease;
  }

  .journal-card:hover {
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    border-color: #d1d5db;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .card-date time {
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .journal-types {
    display: flex;
    gap: 0.5rem;
  }

  .journal-type {
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .type-main {
    background: #dbeafe;
    color: #1e40af;
  }

  .type-annex {
    background: #fef3c7;
    color: #92400e;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .journal-info {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .journal-item {
    padding-bottom: 1rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .journal-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .journal-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .journal-title a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .journal-title a:hover {
    color: #2563eb;
  }

  .journal-excerpt {
    font-size: 0.875rem;
    color: #4b5563;
    line-height: 1.6;
    margin: 0 0 0.75rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .journal-meta {
    display: flex;
    gap: 1rem;
    color: #6b7280;
    font-size: 0.75rem;
  }

  .card-stats {
    background: #f9fafb;
    border-radius: 0.5rem;
    padding: 1rem;
    border: 1px solid #f3f4f6;
  }

  .stats-row {
    display: flex;
    justify-content: space-around;
    text-align: center;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-number {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1f2937;
  }

  .stat-text {
    font-size: 0.625rem;
    color: #6b7280;
    margin-top: 0.25rem;
    font-weight: 500;
  }

  .card-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .btn-primary {
    background-color: #2563eb;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1d4ed8;
    text-decoration: none;
  }

  .btn-outline {
    background-color: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
  }

  .btn-outline:hover {
    background-color: #2563eb;
    color: white;
    text-decoration: none;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .empty-state p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .journals-grid {
      grid-template-columns: 1fr;
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .journal-types {
      align-self: flex-start;
    }

    .stats-row {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .stat {
      min-width: 60px;
    }

    .card-actions {
      flex-direction: column;
    }

    .btn {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .journal-card {
      padding: 1rem;
    }

    .stats-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>