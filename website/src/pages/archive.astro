---
import BaseLayout from '@/layouts/BaseLayout.astro';
import WeeklyJournalCard from '@/components/WeeklyJournalCard.astro';
import { withBase } from '@/utils/base-path';
import { getAllJournals } from '@/utils/content-parser';
import '@/styles/global.css';

const journals = getAllJournals();

const title = 'アーカイブ - GenAI週刊';
const description =
  'GenAI週刊の過去のジャーナル一覧。メインジャーナル、アネックス、サマリーなど各週の記事をご覧いただけます。';

// Calculate total statistics
const totalStats = journals.reduce(
  (acc, journal) => ({
    totalJournals: acc.totalJournals + 1,
    totalMainJournals: acc.totalMainJournals + (journal.mainJournal ? 1 : 0),
    totalAnnexJournals: acc.totalAnnexJournals + (journal.annexJournal ? 1 : 0),
    totalSummaries: acc.totalSummaries + journal.stats.totalSummaries,
  }),
  {
    totalJournals: 0,
    totalMainJournals: 0,
    totalAnnexJournals: 0,
    totalSummaries: 0,
  }
);

// Format journals by year for better organization
const journalsByYear = journals.reduce(
  (acc, journal) => {
    const year = journal.date.substring(0, 4);
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(journal);
    return acc;
  },
  {} as Record<string, typeof journals>
);

const years = Object.keys(journalsByYear).sort().reverse();
---

<BaseLayout title={title} description={description}>
  <div class="archive-page">
    <header class="archive-header">
      <nav class="breadcrumb">
        <a href={withBase('/')}>ホーム</a>
        <span class="separator">›</span>
        <span class="current">アーカイブ</span>
      </nav>

      <h1 class="page-title">GenAI週刊アーカイブ</h1>
      
      <div class="archive-stats">
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalJournals}</div>
            <div class="stat-label">総週数</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalMainJournals}</div>
            <div class="stat-label">メインジャーナル</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalAnnexJournals}</div>
            <div class="stat-label">アネックス</div>
          </div>
          <div class="stat-item">
            <div class="stat-value">{totalStats.totalSummaries.toLocaleString()}</div>
            <div class="stat-label">総サマリー数</div>
          </div>
        </div>
      </div>
    </header>

    <main class="archive-content">
      {years.map(year => (
        <section class="year-section">
          <h2 class="year-heading">{year}年</h2>
          
          <div class="journals-grid">
            {journalsByYear[year].map(journal => (
              <WeeklyJournalCard journalData={journal} />
            ))}
          </div>
        </section>
      ))}
      
      {journals.length === 0 && (
        <div class="empty-state">
          <p>まだジャーナルが公開されていません。</p>
          <a href={withBase('/')} class="btn btn-primary">ホームに戻る</a>
        </div>
      )}
    </main>
  </div>
</BaseLayout>

<style>
  .archive-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .archive-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .breadcrumb {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: #2563eb;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 0.5rem;
    color: #9ca3af;
  }

  .current {
    color: #374151;
    font-weight: 500;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .archive-stats {
    background: #f8fafc;
    border-radius: 0.75rem;
    padding: 1.5rem;
    border: 1px solid #e2e8f0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 2rem;
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: #2563eb;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
    margin-top: 0.5rem;
    font-weight: 500;
  }

  .archive-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .year-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .year-heading {
    font-size: 1.875rem;
    font-weight: 600;
    color: #1f2937;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .journals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
    gap: 2rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .empty-state p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .btn-primary {
    background-color: #2563eb;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1d4ed8;
    text-decoration: none;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .journals-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>