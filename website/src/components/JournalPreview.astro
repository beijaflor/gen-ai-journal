---
import type { JournalEntry } from '@/utils/content-parser';
import { withBase } from '@/utils/base-path';

export interface Props {
  journal: JournalEntry;
  summaryCount?: number;
  showExcerpt?: boolean;
  showActions?: boolean;
}

const { 
  journal,
  summaryCount = journal.summaryCount,
  showExcerpt = true,
  showActions = true
} = Astro.props;

// Format reading time
const readingTimeText = journal.readingTime === 1 
  ? '1分で読めます'
  : `${journal.readingTime}分で読めます`;

// Format date for display
const displayDate = new Date(journal.date).toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Journal type display
const typeLabel = journal.type === 'main' ? 'メインジャーナル' : 'アネックス';
const typeClass = journal.type === 'main' ? 'type-main' : 'type-annex';
---

<article class="journal-preview">
  <header class="preview-header">
    <div class="header-main">
      <h3 class="journal-title">
        <a href={withBase(`/journals/${journal.date}/${journal.type}/`)}>
          {journal.title}
        </a>
      </h3>
      <div class="journal-meta">
        <time datetime={journal.date} class="publish-date">
          {displayDate}
        </time>
        <span class={`journal-type ${typeClass}`}>
          {typeLabel}
        </span>
      </div>
    </div>
    
    <div class="reading-info">
      <span class="reading-time">{readingTimeText}</span>
      {summaryCount > 0 && (
        <span class="summary-count">
          {summaryCount}件のサマリー
        </span>
      )}
    </div>
  </header>

  {showExcerpt && journal.excerpt && (
    <div class="journal-excerpt">
      <p>{journal.excerpt}</p>
    </div>
  )}

  {showActions && (
    <footer class="preview-actions">
      <div class="action-buttons">
        <a href={withBase(`/journals/${journal.date}/${journal.type}/`)} class="btn btn-primary">
          記事を読む
        </a>
        <a href={withBase(`/journals/${journal.date}/`)} class="btn btn-outline">
          週の概要
        </a>
        {summaryCount > 0 && (
          <a href={withBase(`/journals/${journal.date}/summaries/`)} class="btn btn-outline">
            全サマリー ({summaryCount})
          </a>
        )}
      </div>
      
      <div class="article-stats">
        <span class="word-count">{journal.wordCount.toLocaleString()}文字</span>
      </div>
    </footer>
  )}
</article>

<style>
  .journal-preview {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    transition: all 0.2s ease;
  }

  .journal-preview:hover {
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    border-color: #d1d5db;
  }

  .preview-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .header-main {
    flex: 1;
    min-width: 0;
  }

  .journal-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.375rem;
    font-weight: 700;
    line-height: 1.4;
  }

  .journal-title a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .journal-title a:hover {
    color: #2563eb;
    text-decoration: none;
  }

  .journal-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .publish-date {
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .journal-type {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .type-main {
    background: #dbeafe;
    color: #1e40af;
  }

  .type-annex {
    background: #fef3c7;
    color: #92400e;
  }

  .reading-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    flex-shrink: 0;
  }

  .reading-time {
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .summary-count {
    color: #9ca3af;
    font-size: 0.75rem;
    white-space: nowrap;
  }

  .journal-excerpt {
    margin-bottom: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid #f3f4f6;
  }

  .journal-excerpt p {
    color: #4b5563;
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
  }

  .preview-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #f3f4f6;
  }

  .action-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .btn-primary {
    background-color: #2563eb;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1d4ed8;
    text-decoration: none;
  }

  .btn-outline {
    background-color: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
  }

  .btn-outline:hover {
    background-color: #2563eb;
    color: white;
    text-decoration: none;
  }

  .article-stats {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #9ca3af;
    font-size: 0.75rem;
  }

  .word-count {
    font-weight: 500;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .preview-header {
      flex-direction: column;
      align-items: stretch;
    }

    .reading-info {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .journal-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .preview-actions {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .action-buttons {
      order: 1;
    }

    .article-stats {
      order: 2;
      justify-content: center;
    }

    .btn {
      justify-content: center;
      flex: 1;
    }
  }

  @media (max-width: 480px) {
    .journal-preview {
      padding: 1rem;
    }

    .journal-title {
      font-size: 1.25rem;
    }

    .action-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }
</style>