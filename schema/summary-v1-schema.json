{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summary Entry v1.0",
  "description": "Structured schema for article summaries generated by Gemini",
  "type": "object",
  "required": ["metadata", "content"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "generatedAt", "generatedBy"],
      "properties": {
        "version": {
          "type": "string",
          "const": "1.0",
          "description": "Schema version"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "generatedBy": {
          "type": "string",
          "description": "Model identifier (e.g., gemini-3-flash-preview)"
        }
      }
    },
    "content": {
      "type": "object",
      "required": [
        "title",
        "url",
        "language",
        "contentType",
        "oneSentenceSummary",
        "summaryBody",
        "topics",
        "scores"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Article title in Japanese"
        },
        "originalTitle": {
          "type": ["string", "null"],
          "maxLength": 300,
          "description": "Original title if article is in non-Japanese language"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Article URL"
        },
        "language": {
          "type": "string",
          "enum": ["ja", "en", "zh", "ko", "other"],
          "description": "Article language code"
        },
        "contentType": {
          "type": "string",
          "enum": [
            "ğŸš€ Product Launch (è£½å“ç™ºè¡¨)",
            "ğŸ”¬ Research & Analysis (ç ”ç©¶ãƒ»åˆ†æ)",
            "ğŸ’¡ Tutorial & How-to (ãƒãƒ¥ãƒ¼ãƒˆãƒªã‚¢ãƒ«)",
            "ğŸ¯ Opinion & Commentary (æ„è¦‹ãƒ»è«–è©•)",
            "ğŸ“Š Industry News (æ¥­ç•Œãƒ‹ãƒ¥ãƒ¼ã‚¹)",
            "ğŸ› ï¸ Tools & Resources (ãƒ„ãƒ¼ãƒ«ãƒ»ãƒªã‚½ãƒ¼ã‚¹)",
            "ğŸ“ Learning & Education (å­¦ç¿’ãƒ»æ•™è‚²)",
            "ğŸŒ Community & Events (ã‚³ãƒŸãƒ¥ãƒ‹ãƒ†ã‚£ãƒ»ã‚¤ãƒ™ãƒ³ãƒˆ)"
          ],
          "description": "Content category"
        },
        "oneSentenceSummary": {
          "type": "string",
          "minLength": 10,
          "maxLength": 300,
          "description": "One sentence summary in Japanese"
        },
        "summaryBody": {
          "type": "string",
          "minLength": 100,
          "maxLength": 1200,
          "description": "Full summary body in markdown format (300-800 chars typical)"
        },
        "topics": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": "Topic tags (1-5 tags)"
        },
        "scores": {
          "type": "object",
          "required": [
            "signal",
            "depth",
            "uniqueness",
            "practical",
            "antiHype",
            "mainJournal",
            "annexPotential",
            "overall"
          ],
          "properties": {
            "signal": {
              "type": "integer",
              "minimum": 0,
              "maximum": 5,
              "description": "Signal-to-noise ratio (0-5)"
            },
            "depth": {
              "type": "integer",
              "minimum": 0,
              "maximum": 5,
              "description": "Content depth (0-5)"
            },
            "uniqueness": {
              "type": "integer",
              "minimum": 0,
              "maximum": 5,
              "description": "Perspective uniqueness (0-5)"
            },
            "practical": {
              "type": "integer",
              "minimum": 0,
              "maximum": 5,
              "description": "Practical applicability (0-5)"
            },
            "antiHype": {
              "type": "integer",
              "minimum": 0,
              "maximum": 5,
              "description": "Anti-hype factor (0-5)"
            },
            "mainJournal": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Main journal fit score (0-100)"
            },
            "annexPotential": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Annex journal potential score (0-100)"
            },
            "overall": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Overall quality score (0-100)"
            }
          }
        }
      }
    }
  }
}
